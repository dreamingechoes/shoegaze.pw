---
title: Shoegaze.pw
---

<% content_for :title do %>
  <title><%= beautify(decade) %> - Shoegaze.pw</title>
<% end %>

<%= partial 'layouts/metas', locals: { title: "#{decade} - Shoegaze.pw",
                             description: "The story of the shoegaze through the essentials.",
                             url: "http://shoegaze.pw/#{slugify(decade)}",
                             image: "http://shoegaze.pw/assets/images/home.jpg" } %>

<section id="albums">
  <div class="container">
    <div class="desktop-12 columns"><div class="border-top"></div></div>

    <% i = 1 %>
    <% data.send(decade).albums.each do |key, album| %>
      <a href="/album/<%= slugify(album.title) %>.html" class="permalink album-detail"
         data-spotify-id="<%= album.spotify_id %>"
         data-album-index="<%= album.album_index %>">
        <div class="desktop-3 columns">
          <div class="item first-row">
            <h3><%= beautify(album.title) %></h3>
            <span class="category"><%= beautify(key.capitalize) %></span>
            <img src="" alt="" class="album-cover"/>
          </div>
        </div>
      </a>

      <% if i%4 == 0 %>
        <div class="clear"></div>
        <% i = 1 %>
      <% else %>
        <% i += 1 %>
      <% end %>
    <% end %>

  </div>
</section>
